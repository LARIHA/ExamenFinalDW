@model IEnumerable<caminaconestilo.Models.cliente>

@{
    ViewBag.Title = "Index";
}

<h2>Listado Clientes</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            <label>No.</label>
        </th>
        <th>
            <label>Nombre</label>
        </th>
        <th>
            <label>Apellido</label>
        </th>
        <th>
            <label>Direccion</label>
        </th>
        <th>
            <label>Telefono</label>
        </th>
        <th>
            <label>Dpi</label>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.id_cliente)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.apellido)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.direccion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tel)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.dpi)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.id_cliente }) |
            @Html.ActionLink("Detalles", "Details", new { id = item.id_cliente }) |
            @Html.ActionLink("Borrar", "Delete", new { id = item.id_cliente })
        </td>
    </tr>
}

</table>
